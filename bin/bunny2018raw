#!/bin/bash

if [ "$#" -lt 2 ]; then
    echo "Invalid number of arguments, expected 2 or 3"
    echo "usage: runme start mode"
    echo "  start: L R C"
    echo "  mode: auto teleop test"
    echo "if mode is auto, it is followed by the automode switch setting"
    exit 1
fi

pos=17.0,115.0
extra=""

#
# Set the starting position
#
if [ $1 = "C" ]; then
    pos=17.0,115.0
fi

if [ $1 = "L" ]; then
    pos=17.0,48.0
fi

if [ $1 = "R" ]; then
    pos=17.0,288.0
fi

modeset=false
if [ $2 = "auto" ]; then
    modeset=true
    autotime=60.0
    teleoptime=0.0
    testtime=0.0
    extra="--simprop autovalue=$3"
fi

if [ $2 = "teleop" ]; then
    modeset=true
    autotime=0.0
    teleoptime=300.0
    testtime=0.0
fi

if [ $2 = "test" ]; then
    modeset=true
    autotime=0.0
    teleoptime=0.0
    testtime=300.0
fi    

echo --simfile SIM --test $testtime --start 1 --auto $autotime --oper $teleoptime --simprop pos=$pos $extra
build/exe/frcUserProgramSim/frcUserProgramSim --simfile SIM --test $testtime --start 0 --auto $autotime --oper $teleoptime --simprop pos=$pos $extra
