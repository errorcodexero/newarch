{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build RobotCode",
            "type": "shell",
            "command": ".\\gradlew.bat frcUserProgramExecutable",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Simulator",
            "type": "shell",
            "command": ".\\gradlew.bat frcUserProgramSimExecutable",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": ".\\gradlew.bat build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Deploy Robot Code",
            "type": "shell",
            "command": ".\\gradlew.bat deploy",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": ".\\gradlew.bat clean",
            "problemMatcher": []
        }
    ]
}